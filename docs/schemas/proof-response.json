{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://zk-id.dev/schemas/proof-response.json",
  "title": "ProofResponse",
  "description": "Response containing a zero-knowledge proof submitted to a verifier. This is the request body for POST /api/verify-age, POST /api/verify-nationality, and the SDK verifyProof() method.",
  "type": "object",
  "required": ["credentialId", "claimType", "proof", "signedCredential", "nonce", "requestTimestamp"],
  "properties": {
    "credentialId": {
      "type": "string",
      "description": "The credential ID being proven"
    },
    "claimType": {
      "type": "string",
      "enum": ["age", "nationality", "age-revocable"],
      "description": "Type of claim being proven"
    },
    "proof": {
      "type": "object",
      "description": "The zero-knowledge proof with public signals",
      "required": ["proof", "publicSignals"],
      "properties": {
        "proof": { "$ref": "defs.json#/definitions/Proof" },
        "publicSignals": {
          "oneOf": [
            { "$ref": "defs.json#/definitions/AgePublicSignals" },
            { "$ref": "defs.json#/definitions/NationalityPublicSignals" },
            { "$ref": "defs.json#/definitions/AgeProofRevocablePublicSignals" }
          ]
        }
      },
      "additionalProperties": false
    },
    "signedCredential": {
      "oneOf": [
        { "$ref": "defs.json#/definitions/SignedCredential" },
        { "$ref": "defs.json#/definitions/CircuitSignedCredential" }
      ],
      "description": "Issuer-signed credential binding"
    },
    "nonce": {
      "type": "string",
      "minLength": 1,
      "description": "Nonce from the original ProofRequest"
    },
    "requestTimestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 request timestamp from the original ProofRequest"
    }
  },
  "additionalProperties": false
}

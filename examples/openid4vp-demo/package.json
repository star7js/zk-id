{
  "name": "zk-id-openid4vp-demo",
  "version": "0.6.2",
  "description": "OpenID4VP demonstration with zk-id",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm:start:issuer\" \"npm:start:verifier\" \"npm:start:ui\"",
    "start:issuer": "cd ../../packages/issuer-server && PORT=${VITE_ISSUER_PORT:-3001} npm run dev",
    "start:verifier": "tsx src/verifier.ts",
    "start:ui": "vite",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "@zk-id/core": "*",
    "@zk-id/sdk": "*",
    "@zk-id/issuer": "*",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "concurrently": "^8.2.2"
  }
}
